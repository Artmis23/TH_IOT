<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/bg_main1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_main">

        <RelativeLayout
            android:id="@+id/nhietdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/img_nhietdo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_nhietdo">
            </ImageView>

            <TextView
                android:id="@+id/nhietdo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:layout_toRightOf="@+id/img_nhietdo"
                android:fontFamily="@font/regular"
                android:text="TEMP"
                android:textColor="@color/black"
                android:textSize="30dp">
            </TextView>

            <TextView
                android:id="@+id/nhietdo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@+id/img_nhietdo"
                android:fontFamily="@font/regular"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="30dp">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/nhietdo">

            <ImageView
                android:id="@+id/img_doam"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_doam">
            </ImageView>

            <TextView
                android:id="@+id/doam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:layout_toRightOf="@+id/img_doam"
                android:fontFamily="@font/regular"
                android:text="HUMI"
                android:textColor="@color/black"
                android:textSize="30dp">
            </TextView>

            <TextView
                android:id="@+id/doam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@+id/img_doam"
                android:fontFamily="@font/regular"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="30dp">
            </TextView>
        </RelativeLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/bg_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bg_main1">

        <RelativeLayout
            android:id="@+id/khung1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_tron">

            <TextView
                android:id="@+id/den1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ON/OFF"
                android:textColor="@color/black"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/khung2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_tron">

            <ImageView
                android:id="@+id/mic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_tron"
                android:scaleType="center"
                android:src="@drawable/ic_mic"></ImageView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/khung3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/khung2"
            android:background="@drawable/ic_tron">

            <TextView
                android:id="@+id/den3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ON/OFF"
                android:textColor="@color/black"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/khung4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/ic_tron">

            <TextView
                android:id="@+id/den4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ON/OFF"
                android:textColor="@color/black"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/khung5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="150dp"
            android:layout_toRightOf="@+id/khung4"
            android:background="@drawable/ic_tron">

            <TextView
                android:id="@+id/den5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ON/OFF"
                android:textColor="@color/black">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/khung6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            android:layout_toRightOf="@+id/khung5"
            android:background="@drawable/ic_tron">

            <TextView
                android:id="@+id/den6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ON/OFF"
                android:textColor="@color/black"></TextView>
        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>